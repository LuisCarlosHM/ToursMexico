extends base
block content
    header.navbar
      img(src='./img/icon2.png')
      .menu
        a.menu__item.link(href='/') Inicio
        a.menu__item.link(href='#tours') Tours
        if user
          a.menu__item.link(href='#' id="btn-close-session") Cerrar sesi&oacute;n
        else
          a.menu__item.link(href='/login') Iniciar sesi&oacute;n
    main.container.main
      .main__text &quot;Caminos antiguos, experiencias eternas&quot;
      a.main__button(href='#tours') Descubre nuestros tours
    section#tours.container.section.tours
      h2.section__title Explora los Tesoros de la Cultura Prehisp&aacute;nica
      .flex_container
        .cards
          each tour in tours
            .card
              .card__img
                img.card__img(src=`./img/${tour.imageCover}` alt=tour.name)
              .card__text
                h3.card__title= tour.name
                p.card__description= tour.description
                a.card__button(href=`/tour/${tour.slug}`) Reserva ahora